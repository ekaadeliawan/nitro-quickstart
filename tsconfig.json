// tsconfig.json
{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#imports": ["./src/types/nitro-imports"],
      "nitropack/types": ["./node_modules/nitropack/types"],
      "nitropack/runtime": ["./node_modules/nitropack/runtime"],
      "nitropack": ["./node_modules/nitropack"],
      "h3": ["./node_modules/h3"],
      "defu": ["./node_modules/defu"],
      "consola": ["./node_modules/consola"]
    },
    "lib": ["esnext", "webworker"],
    "types": ["node"]
  },
  "include": ["./src/**/*", "./nitro.config.ts"],
  "exclude": ["node_modules", "dist", ".nitro"]
}
